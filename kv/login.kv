MDScreen:
    name: "login"
    email_valid: True
    password_valid: True

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "welcome"
        MDLabel:
            text: "Вход"
            font_name: "Montserrat"
            font_size: "26sp"
            bold: True
            pos_hint: {"center_x": .6, "center_y": .85}
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Используйте созданный ранее аккаунт, чтобы продолжить"
            font_name: "Montserrat"
            font_size: "18sp"
            bold: True
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(68, 137, 200, 255)

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .63}
            TextInput:
                id: email
                hint_text: "Эл.почта"
                font_name: "Montserrat"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                #foreground_color: rgba(0, 0, 59, 255)
                foreground_color: [1, 0, 0, 1] if not root.email_valid else [0, 0, 0, 1]
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                on_text_validate: app.validate_email(email.text)

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .5}
            TextInput:
                id: password
                hint_text: "Пароль"
                font_name: "Montserrat"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                #foreground_color: rgba(0, 0, 59, 255)
                foreground_color: [1, 0, 0, 1] if not root.password_valid else [0, 0, 0, 1]
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True
                on_text_validate: app.validate_password(email.text, password.text)

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)

        Button:
            text: "Войти"
            font_name: "Montserrat"
            bold: True
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
            font_name: "Montserrat"
            on_release:
                app.on_login(email.text, password.text)
            canvas.before:
                Color:
                    rgb: rgba(68, 137, 200, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        #MDTextButton:
        #    text: "Забыли пароль?"
        #    pos_hint: {"center_x": .5, "center_y": .28}
        #    color: rgba(68, 137, 200, 255)
        #    font_size: "12sp"
        #    font_name: "Montserrat"

        MDGridLayout:
            cols: 1
            size_hint: .48, .15
            pos_hint: {"center_x": .5, "center_y": .15}
            Image:
                source: "data/logo/garage.png"

        MDLabel:
            text: "Ещё не зарегистрированы?"
            font_name: "Montserrat"
            font_size: "11sp"
            pos_hint: {"center_x": .63, "center_y": .04}
            color: rgba(135, 133, 193, 255)

        MDTextButton:
            text: "Создать аккаунт"
            font_name: "Montserrat"
            font_size: "11sp"
            pos_hint: {"center_x": .75, "center_y": .04}
            color: rgba(68, 137, 200, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"




