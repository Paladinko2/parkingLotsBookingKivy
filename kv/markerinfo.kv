<MarkerInfoPopup>:
    title: root.title

    MDBoxLayout:
        md_bg_color: 1, 1, 1, 1
        orientation: 'vertical'
        padding: dp(10)
        radius: [20, 20, 20, 20]

        MDBoxLayout:
            md_bg_color: 1, 1, 1, 1
            orientation: 'vertical'
            padding: dp(20)
            radius: [20, 20, 20, 20]

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                spacing: dp(13)

                MDLabel:
                    text: 'Информация о парковочной зоне'
                    font_style: 'H6'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSeparator:
                    height: dp(2)

                MDLabel:
                    text: 'Номер парковки: ' + root.zone_number
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: 'Адрес: ' + root.address
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: 'Кол-во свободных мест: ' + root.av_lots
                    size_hint_y: None
                    height: self.texture_size[1]

            #MDSegmentedControl:
            #    pos_hint: {"center_x": .5, "center_y": .5}
            #    size_hint_x: None
            #
            #    MDSegmentedControlItem:
            #        text: "C"
            #        #icon: "car"
            #        width: "20dp"
            #        size_hint_x: None
            #
            #    MDSegmentedControlItem:
            #        text: "M"
            #        width: "20dp"
            #        size_hint_x: None
            #
            #    MDSegmentedControlItem:
            #        text: "T"
            #        width: "20dp"
            #        size_hint_x: None



        MDBoxLayout:
            padding: dp(10)
            spacing: dp(10)
            orientation: 'vertical'

            MDFillRoundFlatButton:
                text: 'Выбрать дату'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.show_datepicker()

            MDBoxLayout:
                padding: dp(10)
                spacing: dp(10)
                orientation: 'horizontal'

                MDFillRoundFlatButton:
                    text: 'Забронировать'
                    on_release:
                        root.book(root.zone_number)
                        root.av_lots = str(app.get_available_lots_number(root.zone_number))

                MDFillRoundFlatButton:
                    text: 'Закрыть'
                    on_release: root.dismiss()
